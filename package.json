{
  "name": "electron-shanbay",
  "version": "1.0.0",
  "description": "A desktop Shanbay client implemented in electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/app/icon512.png --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/app/icon512.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron-Shanbay\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeilLi1992/Electron-Shanbay.git"
  },
  "author": "Yong Li",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NeilLi1992/Electron-Shanbay/issues"
  },
  "homepage": "https://github.com/NeilLi1992/Electron-Shanbay#readme",
  "dependencies": {
    "electron-store": "^1.3.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "materialize-css": "^0.100.2",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "electron-packager": "^10.1.1",
    "electron": "^1.7.10"
  }
}
